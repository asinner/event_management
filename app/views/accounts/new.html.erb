<h1>Sign up here</h1>
<%= form_for @account do |f| %>

	<% if @account.errors.any? %>
	<div class='errors'>
		<% @account.errors.full_messages.each do |msg| %>
			<div>
				<%= msg %>
			</div>
		<% end %>
	</div>
	<% end %>

	<%= f.fields_for :users do |ff| %>
		<div class='field'>
			<%= ff.label :email %>
			<%= ff.email_field :email %>
		</div>
		
		<div class='field'>
			<%= ff.label :password %>
			<%= ff.password_field :password %>
		</div>
		
		<div class='field'>
			<%= ff.label :password_confirmation %>
			<%= ff.password_field :password_confirmation %>
		</div>
		
	<% end %>
	
	<%= f.submit 'Sign up' %>

<% end %>